<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        Media Thumbnails Show
    </title>
    <link href="bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- PDF.js and Simple PDF Thumbnail scripts -->
    <script src="pdfThumbnails.js" data-pdfjs-src="pdf.js/build/pdf.js"></script>
    <style>

    </style>
</head>

<body>
<!-- Page Content -->
<div class="container" id="maincontent">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Media Thumbnails Show
            </h1>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <h1><a href=<%=current+'?at='+pre%>>Back To Pre</a></h1>
        </div>
        <div class="col-sm-12">
            <h2>Folder list</h2>
        </div>
        <div class="col-sm-12">
            <%for(let i=0;i<filedir.length;i++){%>
                    <h3><a href=<%=current+'?at='+encodeURI(filedir[i])%>><%=filedir[i]%></a></h3>
            <%}%> 
        </div>
    </div>
    <hr>
    <%var presize = 4%>
    <%for(let i=0;i<showFileList.length;i++){%>
        <%if(i%presize==0){%>
            <div class="row">
        <%}%>
        <div class=<%="col-sm-"+parseInt(12/presize)%>
            <h4><%=showFileList[i]['file'].substr(showFileList[i]['file'].lastIndexOf('\\') + 1,30)%></h4>
            <h4>size: <%=showFileList[i]['size']%></h4>
            <a href=<%=encodeURI(showFileList[i]['file'])%> target=_blank>
                <%if(showFileList[i]['thumb'] != ''){%>
                    <img class="img-responsive" src=<%=encodeURI(showFileList[i]['thumb'])%>>
                <%}else if(type=='pdf'){%>
                    <img class="img-responsive" data-pdf-thumbnail-file=<%=encodeURI(showFileList[i]['file'])%> src="pdf.png">
                <%}%>
            </a>
        </div>
        <%if(i%presize==presize-1 || i == showFileList.length-1){%>
            </div>
            <hr>
        <%}%>
    <%}%> 
</div>
</body>
</html>